<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#22000000"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="当前模式：xxx" />

    <TextView
        android:id="@+id/tv_change_model_to_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#22000000"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="更改模式为ULR" />

    <TextView
        android:id="@+id/tv_change_model_to_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#22000000"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="更改模式为UID" />

    <TextView
        android:id="@+id/tv_change_model_to_ibeacon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
        android:background="#22000000"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="更改模式为iBeacon" />
    
    <TextView
        android:id="@+id/tv_change_model_to_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
        android:background="#22000000"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="更改模式为iBeacon_Uid_Url" />

    <EditText
        android:id="@+id/et_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="url" />

    <TextView
        android:id="@+id/tv_change_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
        android:background="#22000000"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="更改ULR" />

    <EditText
        android:id="@+id/et_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="uid" />

    <TextView
        android:id="@+id/tv_change_uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
        android:background="#22000000"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="更改UID" />
    
    <EditText
        android:id="@+id/et_uid_name_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="uid_name_space" />

    <TextView
        android:id="@+id/tv_change_uid_name_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
        android:background="#22000000"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="更改uid_name_space" />
    
    <EditText
        android:id="@+id/et_uid_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="uid_custom" />

    <TextView
        android:id="@+id/tv_change_uid_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         android:layout_marginTop="5dp"
        android:background="#22000000"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="更改uid_custom" />

</LinearLayout>